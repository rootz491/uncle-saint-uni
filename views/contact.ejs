<section>

    <div class="executive">
		<div class="asemImg">
			<img src="/static/img/asem.jpeg" alt="asem">
		</div>
		<div class="asemDesc">
			<h1>Uncle Saint</h1>
			<div>
				<div id="blockCover">
					<blockquote>
						<p>"You can't control the wave but you can learn to surf.‚Äù</p>
					</blockquote>
				</div>
				<div id="no">
					<p>Contact</p><p><a href="tel:9667258645">9667258645</a></p>
				</div>
				<div id="media">
					<div>
						<a href="https://twitter.com/UncleSaintt" target="_blank"><img src="https://img.icons8.com/cotton/64/000000/twitter.png"/></a>
					</div>
					<div>
						<a href="https://www.instagram.com/_saintt/" target="_blank"><img src="https://img.icons8.com/cotton/64/000000/instagram.png"/></a>
				
					</div>
				</div>
			</div>
		</div>
	</div>

	<div id="or">
		<h2>OR</h2>
	</div>

    <div class="thankyou" <% if (thankyou == true) { %>hidden <% } %> >
        <h1>You input has been recieved,</h1>
        <p>You'll hear back from us shortly.</p>
    </div>

    <form class="my-form" method="POST" action="/contact">
        <div class="container">
          <h1>Get in touch!</h1>
          <ul>
            <li>
              <select>
                <option selected disabled>-- Please choose an option --</option>
                <option>Admission related query</option>
                <option>Question in general</option>
                <option>Other</option>      
              </select>
            </li>
            <li>
              <div class="grid grid-2">
                <input type="text" placeholder="Name" required>  
                <input type="text" placeholder="Surname" required>
              </div>
            </li>
            <li>
              <div class="grid grid-2">
                <input type="email" placeholder="Email" required>  
                <input type="tel" placeholder="Phone">
              </div>
            </li>    
            <li>
              <textarea placeholder="Message"></textarea>
            </li>   
            <li>
              <input type="checkbox" id="terms">
              <label for="terms">I have read and agreed with <a href="">the terms and conditions.</a></label>
            </li>  
            <li>
              <div class="grid grid-3">
                <div class="required-msg">REQUIRED FIELDS</div>
                <button class="btn-grid" type="submit" disabled>
                  <span class="front">SUBMIT</span>
                </button>
                <button class="btn-grid" type="reset" disabled>
                  <span class="front">RESET</span>
                </button> 
              </div>
            </li>    
          </ul>
        </div>
      </form>

</section>


